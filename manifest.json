{
  "manifest_version": 3,
  "name": "For Scale",
  "description": "Visualize obscure measurements in bananas, Starbucks coffee, and more!",
  "version": "1.0",

  "icons": {
    "16": "/icons/16x16.png",
    "32": "/icons/32x32.png",
    "48": "/icons/48x48.png",
    "128": "/icons/128x128.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "activeTab",
    "contextMenus",
    "scripting"
  ]
}